{
  "name": "vendor-tool-manager",
  "version": "1.0.0",
  "description": "Vendor-compliant tool management and validation",
  "vendorTools": {
    "packageManagers": {
      "npm": {
        "command": "npm",
        "validation": "npm --version",
        "description": "Node.js package manager",
        "vendor": "npmjs.com"
      },
      "pnpm": {
        "command": "pnpm",
        "validation": "pnpm --version",
        "description": "Fast, disk space efficient package manager",
        "vendor": "pnpm.io"
      },
      "yarn": {
        "command": "yarn",
        "validation": "yarn --version",
        "description": "Package manager from Meta",
        "vendor": "yarnpkg.com"
      },
      "pixi": {
        "command": "pixi",
        "validation": "pixi --version",
        "description": "Package management for Python, Rust, and more",
        "vendor": "pixi.sh"
      }
    },
    "infrastructure": {
      "docker": {
        "command": "docker",
        "validation": "docker --version",
        "description": "Container runtime",
        "vendor": "docker.com"
      },
      "dockerCompose": {
        "command": "docker-compose",
        "validation": "docker-compose --version",
        "description": "Container orchestration",
        "vendor": "docker.com"
      },
      "terraform": {
        "command": "terraform",
        "validation": "terraform --version",
        "description": "Infrastructure as Code",
        "vendor": "hashicorp.com"
      },
      "aws": {
        "command": "aws",
        "validation": "aws --version",
        "description": "AWS CLI",
        "vendor": "aws.amazon.com"
      },
      "ansible": {
        "command": "ansible",
        "validation": "ansible --version",
        "description": "Configuration management",
        "vendor": "ansible.com"
      }
    },
    "development": {
      "gh": {
        "command": "gh",
        "validation": "gh --version",
        "description": "GitHub CLI",
        "vendor": "github.com"
      },
      "git": {
        "command": "git",
        "validation": "git --version",
        "description": "Version control",
        "vendor": "git-scm.com"
      },
      "node": {
        "command": "node",
        "validation": "node --version",
        "description": "JavaScript runtime",
        "vendor": "nodejs.org"
      },
      "python": {
        "command": "python",
        "validation": "python --version",
        "description": "Python runtime",
        "vendor": "python.org"
      },
      "rust": {
        "command": "cargo",
        "validation": "cargo --version",
        "description": "Rust toolchain",
        "vendor": "rust-lang.org"
      }
    },
    "ai": {
      "ollama": {
        "command": "ollama",
        "validation": "ollama --version",
        "description": "Local AI model runner",
        "vendor": "ollama.ai"
      },
      "opencode": {
        "command": "opencode",
        "validation": "opencode --version",
        "description": "AI coding assistant",
        "vendor": "opencode.dev"
      }
    },
    "security": {
      "op": {
        "command": "op",
        "validation": "op --version",
        "description": "1Password CLI",
        "vendor": "1password.com"
      },
      "sentry": {
        "command": "sentry-cli",
        "validation": "sentry-cli --version",
        "description": "Error tracking CLI",
        "vendor": "sentry.io"
      }
    },
    "monitoring": {
      "datadog": {
        "command": "datadog",
        "validation": "datadog --version",
        "description": "Monitoring and analytics",
        "vendor": "datadoghq.com"
      }
    }
  },
  "validationRules": {
    "required": ["git", "node", "npm", "docker"],
    "recommended": ["gh", "opencode", "ollama", "terraform"],
    "categories": {
      "critical": ["git", "docker", "node"],
      "infrastructure": ["terraform", "aws", "ansible"],
      "development": ["gh", "python", "rust"],
      "ai": ["opencode", "ollama"],
      "security": ["op", "sentry"]
    }
  },
  "installationGuides": {
    "macos": {
      "docker": "Install Docker Desktop from docker.com",
      "gh": "brew install gh",
      "opencode": "Download from opencode.dev",
      "terraform": "brew install terraform",
      "aws": "brew install awscli",
      "ollama": "brew install ollama"
    },
    "linux": {
      "docker": "Follow docker.com installation guide",
      "gh": "Download from github.com/cli/cli",
      "opencode": "Download from opencode.dev",
      "terraform": "Download from hashicorp.com",
      "aws": "Download AWS CLI from aws.amazon.com"
    },
    "windows": {
      "docker": "Install Docker Desktop from docker.com",
      "gh": "winget install --id GitHub.cli",
      "opencode": "Download from opencode.dev",
      "terraform": "choco install terraform",
      "aws": "Download AWS CLI from aws.amazon.com"
    }
  }
}