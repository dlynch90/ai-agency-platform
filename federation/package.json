{
  "name": "graphql-federation",
  "version": "1.0.0",
  "description": "Apollo Federation 2.0 Gateway and Subgraphs for AI Agency Applications",
  "private": true,
  "workspaces": [
    "gateway",
    "subgraphs/*"
  ],
  "scripts": {
    "start": "npm run start:gateway",
    "start:gateway": "node gateway/src/index.js",
    "start:users": "node subgraphs/users/src/index.js",
    "start:campaigns": "node subgraphs/campaigns/src/index.js",
    "start:analytics": "node subgraphs/analytics/src/index.js",
    "start:all": "concurrently \"npm run start:users\" \"npm run start:campaigns\" \"npm run start:analytics\" \"npm run start:gateway\"",
    "dev": "concurrently \"npm run dev:users\" \"npm run dev:campaigns\" \"npm run dev:analytics\" \"npm run dev:gateway\"",
    "dev:gateway": "nodemon gateway/src/index.js",
    "dev:users": "nodemon subgraphs/users/src/index.js",
    "dev:campaigns": "nodemon subgraphs/campaigns/src/index.js",
    "dev:analytics": "nodemon subgraphs/analytics/src/index.js",
    "test": "jest --config jest.config.js",
    "test:integration": "jest --config jest.integration.config.js",
    "test:coverage": "jest --coverage",
    "lint": "eslint .",
    "compose": "rover supergraph compose --config supergraph-config.yaml > supergraph.graphql",
    "health": "node scripts/health-check.js"
  },
  "dependencies": {
    "@apollo/gateway": "^2.7.0",
    "@apollo/server": "^4.10.0",
    "@apollo/subgraph": "^2.7.0",
    "graphql": "^16.8.0",
    "graphql-ws": "^5.15.0",
    "graphql-subscriptions": "^2.0.0",
    "ws": "^8.16.0",
    "express": "^4.18.0",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "dataloader": "^2.2.2",
    "ioredis": "^5.3.0",
    "prom-client": "^15.1.0",
    "rate-limiter-flexible": "^4.0.0",
    "uuid": "^9.0.0",
    "dotenv": "^16.4.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "nodemon": "^3.0.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.0",
    "supertest": "^6.3.0",
    "eslint": "^8.56.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
