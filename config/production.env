# Production Environment Configuration
# Managed by 1Password and vendor secret management

# Application
NODE_ENV=production
DEVELOPER_DIR=/opt/ai-agency

# Database - PostgreSQL
POSTGRES_PASSWORD=op://production/postgres/password
DATABASE_URL=postgresql://postgres:${POSTGRES_PASSWORD}@postgres:5432/ai_agency

# Redis Cache
REDIS_URL=redis://redis:6379

# Neo4j Graph Database
NEO4J_PASSWORD=op://production/neo4j/password
NEO4J_URI=bolt://neo4j:7687

# Vector Databases
QDRANT_URL=http://qdrant:6333
QDRANT_API_KEY=op://production/qdrant/api_key

# AI/ML APIs
ANTHROPIC_API_KEY=op://production/anthropic/api_key
OPENAI_API_KEY=op://production/openai/api_key
GITHUB_TOKEN=op://production/github/token

# Web Search APIs
TAVILY_API_KEY=op://production/tavily/api_key
EXA_API_KEY=op://production/exa/api_key
BRAVE_API_KEY=op://production/brave/api_key

# Monitoring & Observability
SENTRY_DSN=op://production/sentry/dsn
DATADOG_API_KEY=op://production/datadog/api_key

# Authentication
CLERK_SECRET_KEY=op://production/clerk/secret_key
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=op://production/supabase/anon_key
SUPABASE_SERVICE_ROLE_KEY=op://production/supabase/service_role_key

# Cloud Infrastructure
AWS_ACCESS_KEY_ID=op://production/aws/access_key_id
AWS_SECRET_ACCESS_KEY=op://production/aws/secret_access_key
AWS_REGION=us-east-1

# GitHub Integration
GITHUB_REPOSITORY=your-org/ai-agency-platform
GITHUB_SHA=${GITHUB_SHA}

# Docker Registry
DOCKER_REGISTRY=your-registry.com
DOCKER_USERNAME=op://production/docker/username
DOCKER_PASSWORD=op://production/docker/password

# SSL/TLS
SSL_CERT_PATH=/etc/ssl/certs/ai-agency.crt
SSL_KEY_PATH=/etc/ssl/private/ai-agency.key

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_EXPERIMENTAL_FEATURES=false
ENABLE_DEBUG_MODE=false

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=1000
RATE_LIMIT_BURST=100

# Caching
CACHE_TTL_SECONDS=3600
CACHE_MAX_SIZE_MB=512

# Backup
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30

# Security
CORS_ORIGINS=https://yourdomain.com,https://app.yourdomain.com
SESSION_SECRET=op://production/session/secret
JWT_SECRET=op://production/jwt/secret

# Performance
MAX_WORKERS=4
MEMORY_LIMIT_MB=2048
CPU_LIMIT=2

# Health Checks
HEALTH_CHECK_INTERVAL_SECONDS=30
HEALTH_CHECK_TIMEOUT_SECONDS=10