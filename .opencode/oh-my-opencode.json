{
  "$schema": "https://raw.githubusercontent.com/code-yeongyu/oh-my-opencode/master/assets/oh-my-opencode.schema.json",
  "google_auth": false,
  "sisyphus_agent": {
    "disabled": false,
    "default_builder_enabled": true,
    "planner_enabled": true,
    "replace_plan": true
  },
  "agents": {
    "Sisyphus": {
      "model": "anthropic/claude-opus-4-5",
      "temperature": 0.3,
      "description": "Main orchestrator with extended thinking (32k budget). Plans, delegates, and executes complex tasks using specialized subagents with aggressive parallel execution.",
      "permission": {
        "edit": "allow",
        "bash": "allow",
        "webfetch": "allow",
        "external_directory": "ask"
      }
    },
    "oracle": {
      "model": "openai/gpt-5.2",
      "temperature": 0.2,
      "description": "Architecture, code review, strategy. Uses GPT-5.2 for stellar logical reasoning and deep analysis.",
      "permission": {
        "edit": "deny",
        "bash": "ask",
        "webfetch": "allow",
        "external_directory": "deny"
      }
    },
    "librarian": {
      "model": "anthropic/claude-sonnet-4-5",
      "temperature": 0.3,
      "description": "Multi-repo analysis, doc lookup, implementation examples. Deep codebase understanding and GitHub research with evidence-based answers.",
      "permission": {
        "edit": "deny",
        "bash": "deny",
        "webfetch": "allow",
        "external_directory": "deny"
      }
    },
    "explore": {
      "model": "anthropic/claude-haiku-4-5",
      "temperature": 0.5,
      "description": "Fast codebase exploration and pattern matching. Optimized for quick searches and pattern discovery.",
      "permission": {
        "edit": "deny",
        "bash": "deny",
        "webfetch": "allow",
        "external_directory": "deny"
      }
    },
    "frontend-ui-ux-engineer": {
      "model": "google/gemini-3-pro-high",
      "temperature": 0.7,
      "description": "A designer turned developer. Builds gorgeous UIs. Gemini excels at creative, beautiful UI code.",
      "permission": {
        "edit": "allow",
        "bash": "ask",
        "webfetch": "allow",
        "external_directory": "deny"
      }
    },
    "document-writer": {
      "model": "google/gemini-3-flash",
      "temperature": 0.6,
      "description": "Technical writing expert. Gemini writes prose that flows. Creates clear, concise documentation.",
      "permission": {
        "edit": "allow",
        "bash": "deny",
        "webfetch": "allow",
        "external_directory": "deny"
      }
    },
    "multimodal-looker": {
      "model": "google/gemini-3-flash",
      "temperature": 0.4,
      "description": "Visual content specialist. Analyzes PDFs, images, diagrams to extract information and insights.",
      "permission": {
        "edit": "deny",
        "bash": "deny",
        "webfetch": "allow",
        "external_directory": "deny"
      }
    },
    "Builder-Sisyphus": {
      "model": "anthropic/claude-sonnet-4-5",
      "temperature": 0.3,
      "description": "OpenCode default build agent with enhanced capabilities"
    },
    "Planner-Sisyphus": {
      "model": "openai/gpt-5.2",
      "temperature": 0.2,
      "description": "OpenCode default plan agent for strategic reasoning"
    }
  },
  "disabled_hooks": [],
  "disabled_mcps": [],
  "disabled_agents": [],
  "lsp": {
    "typescript-language-server": {
      "command": ["typescript-language-server", "--stdio"],
      "extensions": [".ts", ".tsx", ".js", ".jsx"],
      "priority": 10
    },
    "pyright": {
      "command": ["pyright-langserver", "--stdio"],
      "extensions": [".py"],
      "priority": 10
    },
    "rust-analyzer": {
      "command": ["rust-analyzer"],
      "extensions": [".rs"],
      "priority": 10
    },
    "gopls": {
      "command": ["gopls", "serve"],
      "extensions": [".go"],
      "priority": 10
    }
  },
  "experimental": {
    "aggressive_truncation": true,
    "auto_resume": true,
    "truncate_all_tool_outputs": true,
    "dcp_on_compaction_failure": true
  }
}
