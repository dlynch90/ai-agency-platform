# OpenCode Environment Configuration
# API Keys and Authentication for OpenCode providers

# OpenAI API Key (required for GPT models)
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API Key (required for Claude models)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# GitHub Personal Access Token (required for GitHub Copilot)
GITHUB_TOKEN=your_github_token_here

# OpenRouter API Key (optional, for additional models)
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Google Gemini API Key (optional)
GOOGLE_API_KEY=your_google_api_key_here

# xAI API Key (optional, for Grok models)
XAI_API_KEY=your_xai_api_key_here

# Cohere API Key (optional)
COHERE_API_KEY=your_cohere_api_key_here

# Groq API Key (optional)
GROQ_API_KEY=your_groq_api_key_here

# Mistral API Key (optional)
MISTRAL_API_KEY=your_mistral_api_key_here

# Hugging Face API Key (optional)
HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# Weights & Biases API Key (optional)
WANDB_API_KEY=your_wandb_api_key_here

# Ollama Configuration
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_DEFAULT_MODEL=codellama:7b

# OpenCode Configuration
OPENCODE_DEFAULT_MODEL=anthropic/claude-3-5-sonnet-20241022
OPENCODE_TEMPERATURE=0.1
OPENCODE_MAX_TOKENS=4096
OPENCODE_LOG_LEVEL=INFO