{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalDependencies": [".env", ".env.local", "tsconfig.json"],
  "globalEnv": [
    "DATABASE_URL",
    "OPENAI_API_KEY",
    "ANTHROPIC_API_KEY",
    "GOOGLE_API_KEY",
    "CLERK_SECRET_KEY",
    "REDIS_URL",
    "NEO4J_URI",
    "QDRANT_URL"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**", ".next/**", "build/**"],
      "env": ["NODE_ENV"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["build"],
      "inputs": ["$TURBO_DEFAULT$", "**/*.test.ts", "**/*.spec.ts"],
      "outputs": ["coverage/**"],
      "env": ["CI", "NODE_ENV"]
    },
    "test:unit": {
      "dependsOn": ["build"],
      "inputs": ["$TURBO_DEFAULT$", "**/*.test.ts"],
      "outputs": ["coverage/**"]
    },
    "test:integration": {
      "dependsOn": ["build"],
      "inputs": ["$TURBO_DEFAULT$", "**/*.integration.ts"],
      "outputs": ["coverage/**"],
      "env": ["DATABASE_URL", "REDIS_URL"]
    },
    "test:e2e": {
      "dependsOn": ["build"],
      "inputs": ["$TURBO_DEFAULT$", "**/*.e2e.ts"],
      "outputs": ["test-results/**", "playwright-report/**"]
    },
    "lint": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", "eslint.config.*"],
      "outputs": []
    },
    "lint:fix": {
      "cache": false
    },
    "typecheck": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", "tsconfig.json"],
      "outputs": []
    },
    "format": {
      "cache": false
    },
    "format:check": {
      "inputs": ["$TURBO_DEFAULT$"],
      "outputs": []
    },
    "db:generate": {
      "cache": false,
      "inputs": ["prisma/schema.prisma"]
    },
    "db:push": {
      "cache": false,
      "inputs": ["prisma/schema.prisma"]
    },
    "db:migrate": {
      "cache": false
    },
    "validate": {
      "dependsOn": ["lint", "typecheck", "test:unit"],
      "outputs": []
    },
    "validate:vendor": {
      "cache": false,
      "inputs": ["$TURBO_DEFAULT$"],
      "outputs": ["reports/vendor-compliance.json"]
    },
    "evaluate": {
      "dependsOn": ["build"],
      "inputs": ["$TURBO_DEFAULT$", "configs/promptfoo/**"],
      "outputs": ["reports/evaluation/**"]
    },
    "evaluate:deepeval": {
      "dependsOn": ["build"],
      "outputs": ["reports/deepeval/**"]
    },
    "evaluate:promptfoo": {
      "cache": false,
      "outputs": ["reports/promptfoo/**"]
    },
    "clean": {
      "cache": false
    }
  }
}
