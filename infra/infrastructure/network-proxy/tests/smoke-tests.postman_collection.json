    {
      "name": "GraphQL Federation Tests",
      "item": [
        {
          "name": "GraphQL Gateway Health",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\"query\":\"query { __typename }\"}"
            },
            "url": {
              "raw": "{{graphql_url}}/",
              "host": ["{{graphql_url}}"],
              "path": ["/"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"GraphQL gateway responds\", function () {",
                  "    pm.response.to.have.status(200);",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData.data.__typename).to.exist;",
                  "});"
                ]
              }
            }
          ]
        },
        {
          "name": "User Service Subgraph",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\"query\":\"query { users { id name } }\"}"
            },
            "url": {
              "raw": "{{graphql_url}}/",
              "host": ["{{graphql_url}}"],
              "path": ["/"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"User subgraph accessible via federation\", function () {",
                  "    pm.response.to.have.status(200);",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData.data).to.have.property('users');",
                  "});"
                ]
              }
            }
          ]
        },
        {
          "name": "Posts Service Subgraph",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\"query\":\"query { posts { id title content author { name } } }\"}"
            },
            "url": {
              "raw": "{{graphql_url}}/",
              "host": ["{{graphql_url}}"],
              "path": ["/"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Posts subgraph with user federation works\", function () {",
                  "    pm.response.to.have.status(200);",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData.data).to.have.property('posts');",
                  "    if (jsonData.data.posts && jsonData.data.posts.length > 0) {",
                  "        pm.expect(jsonData.data.posts[0]).to.have.property('author');",
                  "        pm.expect(jsonData.data.posts[0].author).to.have.property('name');",
                  "    }",
                  "});"
                ]
              }
            }
          ]
        },
        {
          "name": "Analytics Service Subgraph",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\"query\":\"query { analytics { totalUsers totalPosts engagementRate } }\"}"
            },
            "url": {
              "raw": "{{graphql_url}}/",
              "host": ["{{graphql_url}}"],
              "path": ["/"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Analytics subgraph accessible via federation\", function () {",
                  "    pm.response.to.have.status(200);",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData.data).to.have.property('analytics');",
                  "});"
                ]
              }
            }
          ]
        }
      ]
    },
    {
      "name": "Service Integration Tests",
      "item": [
        {
          "name": "Cross-Service Data Flow",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\"query\":\"mutation { createUser(input: { name: \\\"Test User\\\", email: \\\"test@example.com\\\" }) { id name email posts { id title } analytics { engagementRate } } }\"}"
            },
            "url": {
              "raw": "{{graphql_url}}/",
              "host": ["{{graphql_url}}"],
              "path": ["/"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Cross-service mutation works\", function () {",
                  "    pm.response.to.have.status(200);",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData.data.createUser).to.have.property('id');",
                  "    pm.expect(jsonData.data.createUser).to.have.property('name');",
                  "    pm.expect(jsonData.data.createUser).to.have.property('email');",
                  "    pm.expect(jsonData.data.createUser).to.have.property('posts');",
                  "    pm.expect(jsonData.data.createUser).to.have.property('analytics');",
                  "});"
                ]
              }
            }
          ]
        },
        {
          "name": "Cache Integration Test",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "X-Cache-Test",
                "value": "true"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\"query\":\"query { users { id name email } }\"}"
            },
            "url": {
              "raw": "{{graphql_url}}/",
              "host": ["{{graphql_url}}"],
              "path": ["/"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Cache headers present\", function () {",
                  "    pm.response.to.have.status(200);",
                  "    pm.expect(pm.response.headers.get('X-Cache-Status')).to.be.oneOf(['HIT', 'MISS']);",
                  "});"
                ]
              }
            }
          ]
        },
        {
          "name": "Vector Search Integration",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\"query\":\"query { searchPosts(query: \\\"machine learning\\\", limit: 10) { id title content similarity } }\"}"
            },
            "url": {
              "raw": "{{graphql_url}}/",
              "host": ["{{graphql_url}}"],
              "path": ["/"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Vector search integration works\", function () {",
                  "    pm.response.to.have.status(200);",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData.data).to.have.property('searchPosts');",
                  "    if (jsonData.data.searchPosts && jsonData.data.searchPosts.length > 0) {",
                  "        pm.expect(jsonData.data.searchPosts[0]).to.have.property('similarity');",
                  "        pm.expect(jsonData.data.searchPosts[0].similarity).to.be.a('number');",
                  "    }",
                  "});"
                ]
              }
            }
          ]
        }
      ]
    },
