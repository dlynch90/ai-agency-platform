    {
      "name": "Security Tests",
      "item": [
        {
          "name": "Authentication Required",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\"query\":\"mutation { createPost(input: { title: \\\"Test\\\", content: \\\"Test\\\" }) { id } }\"}"
            },
            "url": {
              "raw": "{{graphql_url}}/",
              "host": ["{{graphql_url}}"],
              "path": ["/"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Authentication required for mutations\", function () {",
                  "    // This should either require auth or return appropriate error",
                  "    var jsonData = pm.response.json();",
                  "    if (jsonData.errors) {",
                  "        pm.expect(jsonData.errors[0].message).to.contain('authentication');",
                  "    }",
                  "});"
                ]
              }
            }
          ]
        },
        {
          "name": "Rate Limiting Test",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\"query\":\"query { __typename }\"}"
            },
            "url": {
              "raw": "{{graphql_url}}/",
              "host": ["{{graphql_url}}"],
              "path": ["/"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Rate limiting headers present\", function () {",
                  "    var rateLimitRemaining = pm.response.headers.get('X-RateLimit-Remaining');",
                  "    var rateLimitReset = pm.response.headers.get('X-RateLimit-Reset');",
                  "    if (rateLimitRemaining) {",
                  "        pm.expect(parseInt(rateLimitRemaining)).to.be.at.least(0);",
                  "    }",
                  "    if (rateLimitReset) {",
                  "        pm.expect(parseInt(rateLimitReset)).to.be.greaterThan(Date.now() / 1000);",
                  "    }",
                  "});"
                ]
              }
            }
          ]
        }
      ]
    }
  ],
