{
  "name": "@ai-agency/health-analyzer",
  "version": "1.0.0",
  "description": "Comprehensive codebase health analyzer with vendor adoption scoring",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "codebase-health": "./bin/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "health": "tsx src/cli.ts --ultrathink",
    "health:json": "tsx src/cli.ts --ultrathink --format json",
    "health:api": "tsx src/api/server.ts",
    "fix": "tsx src/cli.ts fix",
    "fix:dry-run": "tsx src/cli.ts fix --dry-run",
    "fix:critical": "tsx src/cli.ts fix --severity critical,high",
    "fix:report": "tsx src/cli.ts fix --output remediation-report.md",
    "test": "vitest",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@hono/node-server": "^1.8.0",
    "commander": "^12.0.0",
    "glob": "^10.3.10",
    "graphql": "^16.8.1",
    "graphql-yoga": "^5.1.1",
    "hono": "^4.0.0",
    "ora": "^8.0.1",
    "picocolors": "^1.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
