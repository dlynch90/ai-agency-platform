{
  "mcpServers": {
    "filesystem": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem"
      ],
      "env": {
        "NODE_ENV": "production"
      }
    },
    "sequential-thinking": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-sequential-thinking"
      ],
      "env": {
        "NODE_ENV": "production"
      }
    },
    "memory": {
      "command": "npx",
      "args": [
        "-y",
        "@danielsimonjr/memory-mcp"
      ],
      "env": {
        "NODE_ENV": "production"
      }
    },
    "task-master": {
      "command": "npx",
      "args": [
        "-y",
        "@gofman3/task-master-mcp"
      ],
      "env": {
        "NODE_ENV": "production"
      }
    },
    "github": {
      "command": "npx",
      "args": [
        "-y",
        "@ama-mcp/github"
      ],
      "env": {
        "GITHUB_TOKEN": "${GITHUB_TOKEN}"
      }
    },
    "ollama": {
      "command": "node",
      "args": [
        "mcp-servers/ollama-server.cjs"
      ],
      "env": {
        "OLLAMA_HOST": "http://localhost:11434"
      }
    },
    "redis": {
      "command": "npx",
      "args": [
        "-y",
        "redis-mcp"
      ],
      "env": {
        "REDIS_URL": "redis://localhost:6379"
      }
    },
    "neo4j": {
      "command": "npx",
      "args": [
        "-y",
        "@henrychong-ai/mcp-neo4j-knowledge-graph"
      ],
      "env": {
        "NEO4J_URI": "bolt://localhost:7687",
        "NEO4J_USER": "neo4j",
        "NEO4J_PASSWORD": "${NEO4J_PASSWORD}"
      }
    },
    "qdrant": {
      "command": "npx",
      "args": [
        "-y",
        "qdrant-api-mcp"
      ],
      "env": {
        "QDRANT_URL": "http://localhost:6333",
        "QDRANT_API_KEY": "${QDRANT_API_KEY}"
      }
    },
    "playwright": {
      "command": "npx",
      "args": [
        "-y",
        "@playwright/mcp"
      ],
      "env": {
        "HEADLESS": "true"
      }
    }
  }
}